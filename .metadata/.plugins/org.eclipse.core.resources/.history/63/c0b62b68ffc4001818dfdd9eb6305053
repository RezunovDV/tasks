package algorithms;

public class Staircase {
	// Complete the staircase function below.
    static void staircase(int n) {

        char c = '#';
        String str1 = " ";
        String str2 = "";
        for (int i = 0; i < n; i++) {          
        	str2 += str1; 
        }
        
        for (int i = 0; i < n; i++) {
        	
        	str2 = str2.replaceFirst(" ", "#");
        	//str2 += c;
        	
			System.out.println(str2);
		}
        
        
    }
	public static void main(String[] args) {
		// TODO Auto-generated method stub

		staircase(6);
		
	}
}
